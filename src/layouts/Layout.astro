---
const { frontmatter } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{frontmatter.title} | TechPulse Global</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  </head>
  <body class="bg-white text-gray-900 leading-loose">
    <nav class="border-b py-6 mb-12">
      <div class="max-w-3xl mx-auto px-6 flex justify-between font-bold">
        <a href="/">TECHPULSE GLOBAL</a>
        <a href="/" class="text-gray-400">Back</a>
      </div>
    </nav>
    <article class="max-w-3xl mx-auto px-6 pb-32">
      <time class="text-blue-600 font-bold">{frontmatter.date}</time>
      <h1 class="text-5xl font-black mt-2 mb-12 tracking-tight leading-tight">{frontmatter.title}</h1>
      <div class="text-xl text-gray-700 space-y-6">
        <slot />
      </div>
    </article>
  </body>
</html>
