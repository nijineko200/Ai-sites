---
const { frontmatter } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{frontmatter.title} | TechPulse Global</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" rel="stylesheet">
  </head>
  <body class="bg-white text-slate-800 font-['Inter',sans-serif] antialiased">
    <nav class="border-b border-slate-100 sticky top-0 bg-white/80 backdrop-blur-md z-10">
      <div class="max-w-3xl mx-auto px-6 py-4 flex justify-between items-center">
        <a href="/" class="font-black text-xl tracking-tighter">TechPulse Global</a>
        <a href="/" class="text-sm font-bold text-slate-400 hover:text-slate-900 transition-colors">Back</a>
      </div>
    </nav>
    <article class="max-w-3xl mx-auto px-6 py-20">
      <header class="mb-16">
        <div class="flex items-center gap-4 mb-6">
          <span class="text-blue-600 font-black text-xs uppercase tracking-[0.2em]">Insights</span>
          <span class="w-1 h-1 bg-slate-300 rounded-full"></span>
          <time class="text-slate-400 text-sm font-medium">{frontmatter.date}</time>
        </div>
        <h1 class="text-5xl font-black text-slate-900 leading-[1.1] tracking-tight mb-8">
          {frontmatter.title}
        </h1>
        <div class="flex items-center gap-3 border-y border-slate-100 py-4">
          <div class="w-8 h-8 bg-slate-200 rounded-full"></div>
          <span class="text-sm font-bold text-slate-700">TechPulse Editorial Team</span>
        </div>
      </header>
      
      <div class="prose prose-slate lg:prose-xl prose-headings:font-black prose-a:text-blue-600 max-w-none leading-[1.8] text-slate-600">
        <slot />
      </div>

      <footer class="mt-20 pt-10 border-t border-slate-100">
        <div class="bg-slate-50 p-8 rounded-2xl text-center">
          <h3 class="font-bold mb-2">Subscribe to our newsletter</h3>
          <p class="text-slate-500 text-sm mb-4">Get the latest insights delivered straight to your inbox.</p>
          <div class="flex gap-2 max-w-sm mx-auto">
            <input type="email" placeholder="Email address" class="flex-1 px-4 py-2 rounded-lg border border-slate-200 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
            <button class="bg-slate-900 text-white px-4 py-2 rounded-lg text-sm font-bold">Join</button>
          </div>
        </div>
      </footer>
    </article>
  </body>
</html>
